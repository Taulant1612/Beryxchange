- unless banks.empty?
  = table_for(banks, class: 'table table-condensed table-hover') do |t|
    - t.column :sn, class: 'col-lg-2'
    - t.column :created_at, class: 'col-lg-4'
    - t.column :currency_obj_key_text, t('.currency'), class: 'col-lg-2'
    - t.column :member_name, t('.name'), class: 'col-lg-3' do |x|
      = link_to x.member_name, url_for([:admin, x.member]), target: '_blank'
    - t.column :fund_source, t('.fund_source'), class: 'col-lg-5' do |x|
      span #{bank_code_to_name x.fund_extra} # #{x.fund_uid}
    - t.column :amount, class: 'col-lg-3' do |x|
      code.text-info = x.amount
    - t.column :state_and_actions, t('.action'), class: 'col-lg-3' do |x|
      span = "#{x.aasm_state_text} / "
      = link_to t("actions.view"), url_for([:admin, x])
